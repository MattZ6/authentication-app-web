{
  "extends": ["next/core-web-vitals", "@rocketseat/eslint-config/react"],
  "plugins": [
    "eslint-plugin-import-helpers"
  ],
  "globals": {
    "React": "readonly"
  },
  "rules": {
    "camelcase": "off",
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          "module",
          "/^@contexts/",
          "/^@hooks/",
          "/^@services/",
          "/^@layouts/",
          "/^@locales/",
          "/^@providers/",
          "/^@utils/",
          "/^@components/",
          "/^@styles/",
          ["parent", "sibling", "index"]
        ],
        "alphabetize": { "order": "asc", "ignoreCase": true }
      }
    ]
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "typescript": {}
    }
  }
}
